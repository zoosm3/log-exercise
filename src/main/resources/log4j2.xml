<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="hoge">
	<Appenders>
		<File name="A1" fileName="/log/A1.log" append="true">
			<PatternLayout pattern="%t %-5p %c{2} - %replace{%m %throwable{full}}{[\r\n]}{}%n" />
		</File>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
		<MyRollingFile name="A2" fileName="/log/A2.log"
			filePattern="logs/app-%d{MM-dd-yyyy}.log.gz" ignoreExceptions="false">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<TimeBasedTriggeringPolicy />
		</MyRollingFile>
	</Appenders>
	<Loggers>

		<Root level="debug">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="A1" />
			<AppenderRef ref="A2" />
		</Root>
	</Loggers>
</Configuration>